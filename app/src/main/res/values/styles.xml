<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#595959</item>
        <item name="colorAccent">#F06292</item>
        <item name="android:buttonStyle">@style/PinkBorderButtonStyle</item>
        <item name="android:imageButtonStyle">@style/PinkImageButtonStyle</item>
    </style>

    <style name="PinkBorderButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/bg_btn_letter</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="PinkImageButtonStyle">
         <item name="android:background">?attr/colorAccent</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>
